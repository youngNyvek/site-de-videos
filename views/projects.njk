{% extends "layout.njk" %}

{% block head %}

<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<title>Projetos - Kevin Faria</title>

{% endblock %}

{% block content %}

    <div id="wrapper">
        <h1>Projetos</h1>

    </div>

    <section class="cards">

        {% for item in items%}
        <div class="card" id="{{item.id}}">
            <div class="card_image-container {{ 'featured-wrapper' if item.featured }}">
                <img src="https://img.youtube.com/vi/{{item.id}}/mqdefault.jpg" alt="Imagem de{{item.title}}">
                {% if item.featured %}
                    <div class="featured">Featured</div>
                {% endif %}
            </div>
            <div class="card_content">
                <p>{{item.title}}</p>
            </div>
            <div class="card_info">
                <p>{{item.duration}}</p>
                <p class="card_price">
                    {{item.price}}
                </p>
            </div> 
        </div>
        {% endfor %}

    </section>


    <div class="modal-overlay ">
        <div class="modal">
            <a class="close-modal">
                <i class="material-icons">close</i>
            </a>

            <div class="modal-content">
                <p>CARREGANDO ...</p>
                <iframe src="" frameborder="0" allowfullscreen></iframe>
                
            </div>
        </div>
    </div>

    <script src="/scripts.js"></script>  

  
{% endblock %}